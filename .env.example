# ============================================================================
# CORE DATABASE / AUTH (required)
# ============================================================================
# Main runtime database used by server endpoints.
POSTGRES_DATABASE_URL=

# Optional aliases also accepted by runtime:
# DATABASE_URL=
# NUXT_POSTGRES_DATABASE_URL=
# TARGET_DATABASE_URL=

# Local auth session signing secret (minimum 32 chars recommended).
AUTH_JWT_SECRET=
AUTH_TOKEN_TTL_SECONDS=604800
AUTH_RESET_TOKEN_TTL_MINUTES=60


# ============================================================================
# WASABI STORAGE (required)
# ============================================================================
WASABI_ENDPOINT=s3.wasabisys.com
WASABI_BUCKET=jobvarejo
WASABI_ACCESS_KEY=
WASABI_SECRET_KEY=
WASABI_REGION=us-east-1


# ============================================================================
# AI / SEARCH (required for AI endpoints)
# ============================================================================
# Prefer NUXT_OPENAI_API_KEY; OPENAI_API_KEY kept for compatibility.
NUXT_OPENAI_API_KEY=
OPENAI_API_KEY=

# Prefer NUXT_SERPER_API_KEY; SERPER_API_KEY kept for compatibility.
NUXT_SERPER_API_KEY=
SERPER_API_KEY=


# ============================================================================
# SUPABASE COMPAT (optional, depending on client features)
# ============================================================================
NUXT_PUBLIC_SUPABASE_URL=
NUXT_PUBLIC_SUPABASE_KEY=
SUPABASE_SERVICE_ROLE_KEY=


# ============================================================================
# PASSWORD RESET / EMAIL (required in production)
# ============================================================================
APP_BASE_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Optional branding for reset e-mails
EMAIL_BRAND_NAME=Job Varejo
EMAIL_SUPPORT_EMAIL=
EMAIL_SIGNATURE_NAME=
EMAIL_LOGO_URL=


# ============================================================================
# DEPLOY / BUILD
# ============================================================================
NODE_OPTIONS=--max-old-space-size=4096
SHARP_IGNORE_GLOBAL_LIBVIPS=true
NODE_ENV=development


# ============================================================================
# OPERATIONS (DB migration scripts only)
# ============================================================================
SOURCE_DATABASE_URL=
TARGET_DATABASE_URL=
